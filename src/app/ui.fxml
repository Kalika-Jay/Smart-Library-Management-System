<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.chart.NumberAxis?>
<AnchorPane prefHeight="380" prefWidth="400" style="-fx-background-color: #f9f9f9; -fx-padding: 15;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.UIController">

    <Label layoutX="80" layoutY="20" text="Library Management System">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Buttons -->
    <Button layoutX="30" layoutY="60" onAction="#getAllUsers" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Show Users" />

    <Button layoutX="122.0" layoutY="60.0" onAction="#getAllBooks" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Show Books" />

    <!-- Toggle Button for Search -->
    <Button fx:id="toggleButton1" layoutX="26.0" layoutY="122.0" onAction="#toggleArea1" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Search by Author" />

    <!-- Hidden Search Area -->
    <AnchorPane fx:id="hiddenArea1" layoutX="30" layoutY="190" managed="false" prefHeight="120" prefWidth="340" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-background-color: #f1f1f1; -fx-border-radius: 8;" visible="false">

        <Label layoutX="20" layoutY="10" text="Search Books by Author">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <TextField fx:id="authorField" layoutX="20" layoutY="40" prefWidth="300" promptText="Enter author keyword" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />

        <Button layoutX="120" layoutY="80" onAction="#onSearchClicked" style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Search" />
    </AnchorPane>
    <Button fx:id="toggleButton2" layoutX="130" layoutY="122.0" onAction="#toggleAddBookArea" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add book" />
    <AnchorPane fx:id="hiddenArea2" layoutX="30" layoutY="190" managed="false" prefHeight="120" prefWidth="340" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-background-color: #f1f1f1; -fx-border-radius: 8;" visible="false">

        <Label layoutX="20" layoutY="10" text="Add book">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="idField" layoutX="20" layoutY="40" prefWidth="300" promptText="Enter id" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />
        <TextField fx:id="titleField" layoutX="20" layoutY="70" prefWidth="300" promptText="Enter title" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />
        <TextField fx:id="authorField2" layoutX="20" layoutY="100" prefWidth="300" promptText="Enter author name" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />

        <Button layoutX="120" layoutY="130" onAction="#onAddBookClicked" style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add" />
    </AnchorPane>
    <AnchorPane fx:id="hiddenArea3" layoutX="30" layoutY="190" managed="false" prefHeight="120" prefWidth="340" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-background-color: #f1f1f1; -fx-border-radius: 8;" visible="false">

        <Label layoutX="20" layoutY="10" text="Add Student">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="uidFieldS" layoutX="20" layoutY="40" prefWidth="300" promptText="Enter id" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />
        <TextField fx:id="nameFieldS" layoutX="20" layoutY="70" prefWidth="300" promptText="Enter name" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />

        <Button layoutX="120" layoutY="130" onAction="#onAddStudentClicked" style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add" />
    </AnchorPane>
    <Button fx:id="toggleButton3" layoutX="240" layoutY="122.0" onAction="#toggleAddStudentArea" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add Student" />
    <AnchorPane fx:id="hiddenArea4" layoutX="30" layoutY="190" managed="false" prefHeight="120" prefWidth="340" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-background-color: #f1f1f1; -fx-border-radius: 8;" visible="false">

        <Label layoutX="20" layoutY="10" text="Add Librarian">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="uidFieldL" layoutX="20" layoutY="40" prefWidth="300" promptText="Enter id" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />
        <TextField fx:id="nameFieldL" layoutX="20" layoutY="70" prefWidth="300" promptText="Enter name" style="-fx-background-color: #e6f7ff; -fx-background-radius: 8; -fx-padding: 6;" />

        <Button layoutX="120" layoutY="130" onAction="#onAddLibrarianClicked" style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add" />
    </AnchorPane>
    <Button fx:id="toggleButton4" layoutX="300" layoutY="122.0" onAction="#toggleAddLibrarianArea" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Add Librarian" />
    <!-- ListView (Initially hidden) -->
    <ListView fx:id="resultsList" layoutX="250.0" layoutY="70.0" managed="false" prefHeight="100" prefWidth="340" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 6;" visible="false" />
   <Text layoutX="21.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Search for a book">
      <font>
         <Font size="14.0" />
      </font>
   </Text>

</AnchorPane>
